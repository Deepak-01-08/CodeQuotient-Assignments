<%- include('./partials/header',{name:username}) %>
    
    <div class="mainContainer">
        
        <div class="leftpart">
            <div class="leftpart1">
                <h2>TASK LIST</h2>
                <p>Add tasks to your list by typing to the right and pressing enter. You may then view pending tasks below.</p>
            </div>

            <div class="leftpart2">
                 <ul  class="list-items">
                    
                     <% todos.forEach(function(todo){ %>
                         <li id="dataUser " > <%= todo.text %> <span class="floatRight" >X</span> <input class="floatRight" type="checkbox" id="getCheckbox"> </li>
                     <% }) %>
                 
                 </ul>
            </div>
        </div>
        
        <div class="rightpart">
               <input id="taskTodo"   class="todoTask" type="text" placeholder="I need to...">
        </div>
    </div>

    <script src="index.js"></script>
</body>
</html>